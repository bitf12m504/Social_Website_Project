@model List<Social_Frenzy.Models.Friend>
@using Social_Frenzy.Models
<body style="background-color:lavender">


    <div class="panel panel-default col-md-9" style="margin-left:20px; padding:0">
        @{
            User u = TempData["UserData"] as User;
        }
        <div class="panel-body col-md-12" style="background-color: lavenderblush; background-image: url(/Images/@u.Profile );border-bottom: 2px solid white; background-size: 970px 500px; height:700">
            <div>
                <img src="/Images/@u.Photo" height="150px" width="150px" style="border:1px solid white; margin-top: 110px" />
            </div>
            <div>
                <label style="color:white;font-weight:600; font-size:18px; margin-left:5px">@u.FirstName <span>@u.LastName</span></label>
            </div>

        </div>
        <div class="panel-footer col-md-12">
            <ul class="nav nav-tabs" style="padding-top:0">
                <li><a href="/Friend/Friend_Profile/@u.Id">Timeline</a></li>

                <li><a href="/Friend/Friends/@u.Id">Friends</a></li>

                <li><a href="/Friend/Photos/@u.Id">Photos</a></li>


            </ul>
        </div>
    </div>

    <div style="margin-left:20px; padding:0" class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-user" style="font-size:18px"> <span style="font-size:20px; font-family:Arial">Friends(@Model.Count)</span></span>
                <div style="margin-left:20px; margin-top:10px">Friends of You</div>
            </div>
            <div class="panel-body" style="margin-top:30px">
                @if (Model.Count == 0)
                {
                    <p>No friends yet</p>
                }
                else
                {
                    int i = 0;
                    while (i < Model.Count)
                    {
                        if (i < Model.Count)
                        {

                            Social_Frenzy.Models.Friend f = Model[i];
                            i++;
                            <div class="col-md-5" style="border:1px solid lightgrey; padding:0; margin-left:50px">

                                <div class="col-md-8" style="padding:0">
                                    @if(f.User1.Id == u.Id)
                                    {
                                         <img src="/Images/@f.User.Photo" height="100" width="120" style="margin:0; padding:0" />
                                        <a href="#" style="font-size: 18px; color: #035aa8;">@f.User.FirstName<span> @f.User.LastName</span></a>
                                    }
                                    else
                                    {
                                         <img src="/Images/@f.User1.Photo" height="100" width="120" style="margin:0; padding:0" />
                                    <a href="#" style="font-size: 18px; color: #035aa8;">@f.User1.FirstName<span> @f.User1.LastName</span></a>
                                    }
                                   
                                </div>

                                <div class="col-md-4" style="margin-top:32px;">
                                    <select class="form-control">
                                        <option>Friends</option>
                                    </select>
                                </div>
                            </div>

                        }
                        if (i < Model.Count)
                        {

                            Social_Frenzy.Models.Friend f = Model[i];
                            i++;
                            <div class="col-md-5" style="border:1px solid lightgrey; padding:0; margin-left:50px; margin-bottom:20px">

                                <div class="col-md-8" style="padding:0">
                                    <img src="/Images/@f.User1.Photo" height="100" width="120" style="margin:0; padding:0" />
                                    <a href="#" style="font-size: 18px; color: #035aa8;">@f.User1.FirstName<span> @f.User1.LastName</span></a>
                                </div>

                                <div class="col-md-4" style="margin-top:32px;">
                                    <select class="form-control">
                                        <option>Friends</option>
                                        <option>Unfriend</option>
                                    </select>
                                </div>
                            </div>
                        }

                    }
                }

            </div>
        </div>
    </div>



</body>