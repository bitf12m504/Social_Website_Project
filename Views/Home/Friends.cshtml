@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Friends";
}
@model  List<Social_Frenzy.Models.Friend>
<body style="background-color:lavender">
    @Html.Partial("~/Views/Shared/Timeline.cshtml")
    <div style="margin-left:20px" class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                @{
                    int count = (int)TempData["FriendsCount"];
                }
                <span class="glyphicon glyphicon-user" style="font-size:18px"> <span style="font-size:20px; font-family:Arial"> Friends(@count)</span></span>
                <div style="margin-left:20px; margin-top:10px">Friends of You</div>
            </div>
            <div class="panel-body" style="margin-top:30px">
                @if(Model.Count == 0)
                {
                   <p>No friends yet</p>
                }
                else
                {
                    int i = 0;
                    while(i < Model.Count)
                    {
                        if(i < Model.Count)
                        {
                         
                            Social_Frenzy.Models.Friend f = Model[i];
                            i++;   
                            <div class="col-md-5" style="border:1px solid lightgrey; padding:0; margin-left:50px">

                        <div class="col-md-8" style="padding:0">
                            @{
                            int sessionID = (int)Session["id"];
                            if (f.FriendId == sessionID)
                            {
                                <img src="/Images/@f.User.Photo" height="100" width="120" style="margin:0; padding:0" />
                                <a href="#" style="font-size: 18px; color: #035aa8;">@f.User.FirstName<span> @f.User.LastName</span></a>
                            }
                            else
                            {
                                <img src="/Images/@f.User1.Photo" height="100" width="120" style="margin:0; padding:0" />
                                <a href="#" style="font-size: 18px; color: #035aa8;">@f.User1.FirstName<span> @f.User1.LastName</span></a>
                            }
                            }
                        </div>

                        <div class="col-md-4" style="margin-top:32px;">
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                    Unfriend
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="/Friend/IgnoreFriend?uid=@f.UserId&fid=@f.FriendId">Unfriend</a></li>

                                </ul>
                            </div>
                        </div>
                    </div>  
                     
                        }
                        if(i < Model.Count)
                        {

                            Social_Frenzy.Models.Friend f = Model[i];
                            i++;
                             <div class="col-md-5" style="border:1px solid lightgrey; padding:0; margin-left:50px; margin-bottom:20px">

                            <div class="col-md-8" style="padding:0">
                                @{
                                    int sessionID = (int)Session["id"];
                                    if(f.FriendId == sessionID)
                                {
                                    <img src="/Images/@f.User.Photo" height="100" width="120" style="margin:0; padding:0" />
                                <a href="#" style="font-size: 18px; color: #035aa8;">@f.User.FirstName<span> @f.User.LastName</span></a>
                                }
                                else
                                {
                                    <img src="/Images/@f.User1.Photo" height="100" width="120" style="margin:0; padding:0" />
                                <a href="#" style="font-size: 18px; color: #035aa8;">@f.User1.FirstName<span> @f.User1.LastName</span></a>
                                }
                                }
                                
                                
                            </div>

                            <div class="col-md-4" style="margin-top:32px;">
                                <div class="dropdown">
                                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                        Unfriend
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a href="/Friend/IgnoreFriend?uid=@f.UserId&fid=@f.FriendId">Unfriend</a></li>
                                        
                                    </ul>
                                </div>
                            </div>
                            </div>      
                        }
                            
                    }
                }
                     
                </div>
            </div>
    </div>
</body>
